{
  "name": "cryptonia-server",
  "type": "commonjs",
  "scripts": {
    "dev": "env NODE_ENV=development nodemon server.js",
    "start": "env NODE_ENV=production pm2 start --update-env server.js",
    "restart": "env NODE_ENV=production pm2 restart --update-env server.js",
    "stop": "pm2 stop server.js",
    "status": "pm2 status",
    "logs": "pm2 logs"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.10.1",
    "pm2": "^5.4.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.9",
    "npm-check-updates": "^17.1.15"
  }
}
